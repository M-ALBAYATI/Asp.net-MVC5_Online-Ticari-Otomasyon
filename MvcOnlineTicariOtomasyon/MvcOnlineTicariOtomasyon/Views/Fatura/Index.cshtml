@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Seri Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var f in Model)
    {
        <tr>
            <td>@f.FaturaSeriNo @f.FaturaSıraNo</td>
            <td>@f.Tarih</td>
            <td>@f.Saat</td>
            <td>@f.Toplam ₺</td>
            <td><a href="/Fatura/FaturaGetir/@f.Faturaid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Fatura/FaturaDetay/@f.Faturaid" class="btn btn-primary">Detaylar</a></td>
            <td><a href="/Fatura/FaturaDetay/@f.Faturaid" class="btn btn-secondary">Kalem</a></td>
        </tr>
    }

</table>
<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni  Fatura Girişi</a>
<br/><br />
<button type="button" class="btn btn-dark" data-toggle="modal" data-target="#Modal1"> Popup Penceresi</button> 

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">PopUP Diyalog Ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri No</td>
                        <td>Sıra No</td>
                        <td>Tutar No</td>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturaSeriNo</td>
                            <td>@x.FaturaSıraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>