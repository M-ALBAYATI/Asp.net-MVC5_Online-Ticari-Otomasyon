@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td style="vertical-align: middle;">@k.Personelid</td>
            <td style="vertical-align: middle;">@k.PersonelAd</td>
            <td style="vertical-align: middle;">@k.PersonelSoyad</td>
            <td style="text-align: center; vertical-align: middle;"><img src="@k.PersonelGorsel" style="width:100px;height:75px;" /></td>
            <td style="text-align: center; vertical-align: middle;">@k.Departman.DepartmanAd</td>
            <td style="text-align: center; vertical-align: middle;"><a href="/Personel/PersonelGetir/@k.Personelid" class="btn btn-warning">Güncelle</a></td>
            <td style="text-align: center; vertical-align: middle;"><a href="/Departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-primary">Detaylar</a></td>
        </tr>
    }

</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>