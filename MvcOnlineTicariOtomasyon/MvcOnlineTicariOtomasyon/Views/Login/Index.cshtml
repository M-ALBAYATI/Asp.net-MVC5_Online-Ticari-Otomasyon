@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Mvc5 Online Ticari Otomasyon</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600|Raleway:400,600,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/weblogin/css/font-awesome.css">

    <link href="~/weblogin/css/style.css" rel="stylesheet" />
    <link href="~/weblogin/css/popup-box.css" rel="stylesheet" />

    <style>
        .social {
            display: flex;
            gap: 10px;
            list-style: none;
            padding: 0;
            margin: 10px 0;
            justify-content: flex-end;
        }

            .social li {
                display: block;
            }

        .social-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            color: #fff;
            font-size: 18px;
            transition: 0.3s ease;
            text-decoration: none;
            background-color: #555;
        }



        .register-in a {
            display: inline-block;
            padding: 15px 25px;
            font-size: 18px;
            font-weight: 600;
            color: #fff;
            border-radius: 40px;
            text-decoration: none;
            transition: 0.4s ease;
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .register-in.middle a {
            background: linear-gradient(45deg, #ff512f, #dd2476);
        }

        .register-in:last-child a {
            background: linear-gradient(45deg, #00b09b, #96c93d);
        }

        .register-in a:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

        .register-right {
            display: flex;
            flex-direction: column;
            gap: 15px;
            justify-content: center;
            align-items: center;
        }

        .logo a {
            font-size: 24px;
            font-weight: bold;
            text-transform: uppercase;
            color: white;
            text-decoration: none;
        }


    </style>
</head>
<body>
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">GİRİŞ FORMU</a>
            </div>
            <div class="social">
                <li><a href="https://www.linkedin.com/in/müb%C3%A2rek-albayati/" target="_blank" class="linkedin"><span class="fa fa-linkedin"></span></a></li>
                <li><a href="https://albay-ati.com.tr/" target="_blank" class="website"><span class="fa fa-globe"></span></a></li>
                <li><a href="https://github.com/M-ALBAYATI" target="_blank" class=" github"><span class="fa fa-github"></span></a></li>
                <li><a href="https://react-3d-portfolio-m-albayati.netlify.app/" target="_blank" class=" code"><span class="fa fa-code"></span></a></li>
            </div>
            <div class="clear"></div>
        </div>

        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <h1>Asp.Net Mvc5 ile</h1>
                    <h2>Dinamik Web Projesi Geliştirme</h2>
                    <p>
                        Admin, Personel kişisel sayfası ve cari kişisel sayfası olmak üzere 3 tane temel yapımız bulunmaktadır.
                        Giriş yapmak istediğiniz yetki durumunuza göre sağ taraftan ilgili menüyü seçin.
                    </p>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="popup-with-zoom-anim" href="#small-dialog2">KAYIT OL »</a>
                </div>
                <div class="register-in middle">
                    <a class="popup-with-zoom-anim" href="#small-dialog">CARI GİRİŞ »</a>
                </div>
                <div class="register-in">
                    <a class="popup-with-zoom-anim" href="#small-dialog1">PERSONEL GİRİŞ »</a>
                </div>
            </div>
            <div class="clear"></div>
        </div>

        <p class="agile-copyright">© 2024 Project. Tüm Hakları Saklıdır..</p>
    </section>

    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">
            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Cari Giriş Formu</h3>
                    <span class="fa fa-lock"></span>

                    <div class="login-agileits-top">
                        @using (Html.BeginForm("CariLogin1", "Login", FormMethod.Post))
                        {
                            <input type="email" name="CariMail" class="email" placeholder="Mail Adresiniz" required />
                            <input type="password" name="CariSifre" class="password" placeholder="Şifreniz" required />
                            <input type="submit" value="Giriş Yap" />
                        }
                    </div>

                    <div style="margin-top: 15px; font-size: 14px; color: #666; background: #f8f9fa; padding: 10px; border-radius: 5px;">
                        <strong>Demo Giriş:</strong><br />
                        Mail: <code>muba@gmail.com</code><br />
                        Şifre: <code>12345</code><br />
                        <span style="font-size: 13px; color: #999;">Bu hesap; grafik, işlem ve veri içeriği bakımından örnek olarak zenginleştirilmiştir.</span>
                    </div>

                </div>
            </div>
        </div>
    </div>



    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">
            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Personel Girişi</h3>

                    <div class="login-agileits-top">
                        @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                        {
                            <input type="text" name="KullaniciAd" class="name" placeholder="Kullanıcı Adı" required />
                            <input type="password" name="Sifre" class="password" placeholder="Şifre" required />
                            <input type="submit" value="Giriş Yap" />
                        }
                    </div>

                    <div style="margin-top: 15px; font-size: 14px; color: #444; background: #f8f9fa; padding: 15px; border-radius: 6px;">
                        <strong>Demo Admin Hesapları</strong>
                        <table style="width:100%; margin-top:10px; font-size: 14px;">
                            <tr>
                                <td><strong>🔐 Tam Yetkili</strong></td>
                                <td>Kullanıcı: <code>Admin</code></td>
                                <td>Şifre: <code>Admin123</code></td>
                            </tr>
                            <tr>
                                <td><strong>🔑 Sınırlı Yetkili</strong></td>
                                <td>Kullanıcı: <code>Limited</code></td>
                                <td>Şifre: <code>Limited123</code></td>
                            </tr>
                        </table>
                        <p style="margin-top:10px; color: #777; font-size: 13px;">
                            Tam yetkili tüm işlemleri gerçekleştirebilir, sınırlı yetkili kullanıcı sadece belirli alanlara erişebilir.
                        </p>
                    </div>


                </div>
            </div>
        </div>
    </div>


    <div class="pop-up">
        <div id="small-dialog2" class="mfp-hide book-form">
            @Html.Action("Partial1", "Login")
        </div>
    </div>

    <script src="~/weblogin/js/jquery-2.1.4.min.js"></script>
    <script src="~/weblogin/js/jquery.magnific-popup.js"></script>
    <script>
        $(document).ready(function () {
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });
        });
    </script>
</body>
</html>
